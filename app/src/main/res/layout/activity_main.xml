<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bg_surface"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Z_SEC Vault"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_lock"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_lock_lock"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- âœ… Selection action bar (long-press activates) -->
    <LinearLayout
        android:id="@+id/bar_selection"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/header"
        android:background="#1A2ECC71"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_selection_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#2ECC71"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_share_selected"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Share"
            android:textColor="#0D1117"
            android:background="#2ECC71"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/btn_cancel_selection"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#8B949E"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- File list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar_selection"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar_selection"
        android:gravity="center"
        android:text="Vault is empty.&#10;Tap + to import and encrypt a file."
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        android:visibility="gone" />

    <!-- FAB "+" -->
    <TextView
        android:id="@+id/fab_add"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_fab"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/bg_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:elevation="6dp" />

</android.widget.RelativeLayout>
