<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:orientation="vertical">

    <!-- â”€â”€ Top Header â”€â”€ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#161B22"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:elevation="4dp">

        <!-- Back -->
        <ImageButton
            android:id="@+id/btn_viewer_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#8B949E" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_viewer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#E6EDF3"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Prev file -->
        <ImageButton
            android:id="@+id/btn_prev_file"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_media_rew"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#8B949E"
            android:contentDescription="Previous file" />

        <!-- Next file -->
        <ImageButton
            android:id="@+id/btn_next_file"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_media_ff"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#8B949E"
            android:contentDescription="Next file" />

        <!-- Share -->
        <ImageButton
            android:id="@+id/btn_viewer_share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_menu_share"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#2ECC71"
            android:contentDescription="Share" />

    </LinearLayout>

    <!-- â”€â”€ Zoom hint bar (image only) â”€â”€ -->
    <LinearLayout
        android:id="@+id/bar_zoom"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#0D161B22"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pinch to zoom  â€¢  Drag to pan"
            android:textColor="#484F58"
            android:textSize="11sp" />

        <!-- Reset zoom button -->
        <TextView
            android:id="@+id/btn_zoom_reset"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="Reset zoom"
            android:textColor="#2ECC71"
            android:textSize="11sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- â”€â”€ IMAGE VIEWER â”€â”€ -->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="matrix"
        android:background="#000000"
        android:visibility="gone" />

    <!-- â”€â”€ TEXT VIEWER â”€â”€ -->
    <ScrollView
        android:id="@+id/scroll_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#E6EDF3"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.4"
            android:textIsSelectable="true" />

    </ScrollView>

    <!-- â”€â”€ VIDEO VIEWER â”€â”€ -->
    <LinearLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#000000"
        android:gravity="center"
        android:visibility="gone">

        <!-- Video title -->
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8B949E"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:maxLines="1"
            android:ellipsize="middle" />

        <!-- VideoView â€” takes remaining space -->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- â”€â”€ VIDEO CONTROLS BAR â”€â”€ -->
    <LinearLayout
        android:id="@+id/video_controls"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#161B22"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <!-- Rewind 10s -->
        <ImageButton
            android:id="@+id/btn_rewind"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@android:drawable/ic_media_rew"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#8B949E"
            android:onClick="rewindVideo"
            android:contentDescription="Rewind" />

        <!-- Play / Pause -->
        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_media_play"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#2ECC71"
            android:contentDescription="Play/Pause" />

        <!-- Fast forward 10s -->
        <ImageButton
            android:id="@+id/btn_fast_forward"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@android:drawable/ic_media_ff"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="#8B949E"
            android:onClick="forwardVideo"
            android:contentDescription="Fast forward" />

    </LinearLayout>

    <!-- â”€â”€ UNSUPPORTED / ERROR â”€â”€ -->
    <LinearLayout
        android:id="@+id/card_unsupported"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“„"
            android:textSize="56sp" />

        <TextView
            android:id="@+id/tv_unsupported_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B949E"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.5" />

    </LinearLayout>

</LinearLayout>
