<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#161B22"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- âœ… Checkbox (visible in selection mode only) -->
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:focusable="false"
            android:clickable="false"
            android:buttonTint="#2ECC71" />

        <!-- File icon -->
        <TextView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:text="ðŸ”’"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginEnd="10dp" />

        <!-- File details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E6EDF3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="middle" />

            <TextView
                android:id="@+id/tv_file_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8B949E"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_date_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#484F58"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Delete (hidden in selection mode) -->
        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="âœ•"
            android:textColor="#FF4444"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
